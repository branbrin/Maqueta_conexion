<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/aceptar_pantalla"
        android:layout_width="251dp"

        android:layout_height="50dp"
        android:layout_marginTop="312dp"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioRecibido"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/cardview_light_background"
            android:text="Recibido" />

        <RadioButton
            android:id="@+id/radioEnviado"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"

            android:background="@color/cardview_light_background"
            android:text="Enviado" />

        <RadioButton
            android:id="@+id/radioAmbos"
            android:layout_width="90dp"
            android:layout_height="48dp"

            android:layout_margin="8dp"
            android:background="@color/cardview_light_background"
            android:text="Ambos" />

    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:layout_marginTop="172dp"
        android:background="@color/cardview_shadow_start_color"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tbidentificador"
            android:layout_width="165dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:textColor="@color/cardview_light_background"
            android:text="Identificador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/identificador"
            android:layout_width="55dp"
            android:layout_height="31dp"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:text=""

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>